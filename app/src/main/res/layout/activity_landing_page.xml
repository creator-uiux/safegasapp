<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- SCROLL CONTENT -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/getStartedBtn"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- HEADER -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- App Name -->
                <TextView
                    android:id="@+id/appName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SafeGas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/black" />

                <!-- Info Icon -->
                <ImageView
                    android:id="@+id/infoIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:contentDescription="Info" />
            </RelativeLayout>

            <!-- TITLE -->
            <TextView
                android:id="@+id/mainTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Real-time Gas Leak Detection\nfor Your Safety"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp"
                android:paddingTop="24dp"
                android:paddingBottom="16dp"
                android:textColor="@android:color/black" />

            <!-- IMAGE -->
            <ImageView
                android:id="@+id/illustration"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/house"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="Illustration"
                android:layout_marginBottom="16dp" />

            <!-- WELCOME SECTION -->
            <TextView
                android:id="@+id/welcomeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to SafeGas"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingTop="12dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/welcomeDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your home's safety, our priority.\nSafeGas offers real-time gas leak detection,\nensuring your peace of mind."
                android:textSize="14sp"
                android:gravity="center"
                android:lineSpacingExtra="3dp"
                android:paddingTop="8dp"
                android:paddingBottom="40dp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </ScrollView>

    <!-- GET STARTED BUTTON FIXED -->
    <Button
        android:id="@+id/getStartedBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:backgroundTint="#00C853"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:padding="12dp" />

</RelativeLayout>
